# Server Configuration
PORT=8000

# CORS - comma-separated list of allowed origins (default allows localhost dev servers)
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Alpaca API Credentials (for options data)
ALPACA_API_KEY=your_alpaca_api_key
ALPACA_API_SECRET=your_alpaca_secret_key

# Database Configuration
# For local SQLite (default):
# DATABASE_URL=sqlite:///./market_data.db

# For Turso remote SQLite:
TURSO_DATABASE_URL=libsql://market-data-rmeyer1.aws-us-east-1.turso.io
TURSO_AUTH_TOKEN=your_turso_auth_token_here
